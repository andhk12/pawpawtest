<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF2FB"
    android:fitsSystemWindows="true">

    <!-- Tab Buttons -->
    <LinearLayout
        android:id="@+id/tab_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="16dp"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btn_journal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_selected"
            android:text="Journal"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_resource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/tab_unselected"
            android:text="Resource"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Journal Content -->
    <LinearLayout
        android:id="@+id/layout_journal_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/tab_container"
        android:layout_margin="16dp">

        <!-- Health Summary Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_health_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:background="@drawable/card_health_background"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_health_background"
                android:padding="12dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sample_cat"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/image_rounded" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Health Summary Card"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#2F3A60"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Vet Visit: 3 Apr 2069\nWeight: 6.9 kg\nVaccines: 1"
                        android:textColor="#2F3A60"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Add Journal Button -->
        <Button
            android:id="@+id/btn_add_journal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="end"
            android:text="ï¼‹ Add journal"
            android:background="@drawable/tab_unselected"
            android:textColor="#2F3A60"/>

        <!-- RecyclerView Journal -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_journal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- Empty State (Pesan + Gambar) -->
    <LinearLayout
        android:id="@+id/empty_state_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_journal_content"
        android:layout_marginTop="90dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/kucing_jalan"
            android:layout_width="wrap_content"
            android:layout_height="81dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/ic_cat_walk" />
        <TextView
            android:id="@+id/empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oh no! Kamu belum memasukkan journal."
            android:textAlignment="center"
            android:textColor="#2F3A60"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>
